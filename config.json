{
  "dev": {
    "html": {
      "src": "src/**/*.html",
      "outDir": "dist"
    },
    "typescript": {
      "src": "src/ts/**/*.ts",
      "outDir": "dist/js",
      "outExt": ".js",
      "minify": false,
      "sourceMaps": {
        "use": true,
        "external": false,
        "externalRelDir": "",
        "externalURLPrefix": ""
      }
    },
    "sass": {
      "src": "src/scss/**/*.scss",
      "outDir": "dist/css",
      "outExt": ".css",
      "minify": false,
      "sourceMaps": {
        "use": true,
        "external": false,
        "externalRelDir": "",
        "externalURLPrefix": ""
      }
    },
    "assets": [
      {
        "src": "src/img/**/*.{png,jpg,jpeg,gif,webp,svg}",
        "outDir": "dist/img"
      },
      {
        "src": "src/js/**/*.js",
        "outDir": "dist/js"
      },
      {
        "src": "node_modules/font-awesome/fonts/**/*.{woff2,woff,eot,ttf,svg}",
        "outDir": "dist/fonts"
      },
      {
        "src": "node_modules/font-awesome/css/font-awesome.min.css",
        "outDir": "dist/css"
      },
      {
        "src": "node_modules/jquery/dist/jquery.min.js",
        "outDir": "dist/js"
      },
      {
        "src": "node_modules/bootstrap/dist/css/bootstrap.min.css",
        "outDir": "dist/css"
      },
      {
        "src": "node_modules/bootstrap/dist/js/bootstrap.min.js",
        "outDir": "dist/js"
      }
    ],
    "clean": ["dist"]
  }
}
